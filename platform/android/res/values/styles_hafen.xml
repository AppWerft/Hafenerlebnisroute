<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.Hafen" parent="@style/Theme.AppCompat">
    	<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
        
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item> 

        
        
        
        <item name="actionBarItemBackground">@drawable/selectable_background_hafen</item>
        <item name="popupMenuStyle">@style/PopupMenu.Hafen</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Hafen</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Hafen</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Hafen</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Hafen</item>
        <item name="actionModeBackground">@drawable/cab_background_top_hafen</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_hafen</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Hafen</item>

        
    </style>

    <style name="ActionBar.Solid.Hafen" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_hafen</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_hafen</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_hafen</item>
        <item name="progressBarStyle">@style/ProgressBar.Hafen</item>
    </style>

    <style name="ActionBar.Transparent.Hafen" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_hafen</item>
        <item name="progressBarStyle">@style/ProgressBar.Hafen</item>
    </style>
	
    <style name="PopupMenu.Hafen" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_hafen</item>	
    </style>
	
    <style name="DropDownListView.Hafen" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_hafen</item>
    </style>

    <style name="ActionBarTabStyle.Hafen" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_hafen</item>
    </style>
	
    <style name="DropDownNav.Hafen" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_hafen</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_hafen</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_hafen</item>
    </style>
    
    <style name="ProgressBar.Hafen" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_hafen</item>
    </style>
    
    <style name="ActionButton.CloseMode.Hafen" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_hafen</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Hafen.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Hafen</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Hafen</item>
    </style>

</resources>